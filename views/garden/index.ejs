<%- include('../layout/header') -%>

<div class="orbit orbit--garden" role="region" aria-label="Favorite Space Pictures" data-orbit data-timer-delay="50000000">
    <ul class="orbit-container">
        <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
        <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
        <% for(let i of slidesData) { %>
        <li class="orbit-slide">
            <div class="figure" style="background-image:url('<%= i.img %>')"></div>
            <h3 class="orbit-caption"><span><%= i.title %></span><a href="<%= i.url %>" class="button large">查看详情</a></h3>
        </li>
        <% } %>
    </ul>
    <nav class="orbit-bullets">
        <% for(let i=0; i<slidesData.length; i++) { %>
        <button class="<%= i == 0 ? 'is-active' : '' %>" data-slide="<%= i %>"><span class="show-for-sr"><%= slidesData[i].title %></span></button>
        <% } %>
    </nav>
</div>

<div class="sale-bar-wrap row expanded block-margin-top">
    <h4><a href="detail_sale.html">2017春季苗木交易促销活动</a></h4>
    <h4><a href="detail_sale.html">热门项目招标推荐</a></h4>
    <h4><a href="detail_sale.html">2017切尔西花展门票预订</a></h4>
    <h4><a href="detail_sale.html">2016年度最佳金融服务</a></h4>
</div>

<div class="hot-bar-wrap clearfix hot-bar-wrap--garden">
    <div class="top-bar hot-bar clearfix">
        <ul class="dropdown menu index" data-dropdown-menu>
            <li class="menu-text">产业资讯</li>
            <% for(let c of info.categories) { %>
            <li>
                <a href="<%= 'list/' + c.id %>"><%= c.name %></a>
            </li>
            <% } %>
        </ul>
    </div>
</div>

<div class="row expanded article-mix">
    
    <div class="large-4 medium-12 columns">
        <a class="article-mix__top" href="article/<%= info.articles[0].id %>">
            <img src="http://oew2ozpi2.bkt.clouddn.com/<%= info.articles[0].logo%>" />
            <h4><%= info.articles[0].title %></h4>
            <p><%= info.articles[0].content %></p>
        </a>
    </div>
    <div class="large-8 medium-12 columns article-mix__sub">
        <div class="row expanded small-up-1 medium-up-2" data-equalizer data-equalize-on="medium">
            <% for(var i = 1; i < info.articles.length; i++) { %>
            <div class="column">
                <a class="article-item" href="detail_cn_article_2.html" data-equalizer-watch>
                    <figure style="background-image:url('http://oew2ozpi2.bkt.clouddn.com/<%= info.articles[i].logo %>')"></figure>
                    <h4><%= info.articles[i].title %></h4>
                    <p><%= info.articles[0].content %></p>
                </a>
            </div>
            <% } %>
        </div>
    </div>
</div>

<div class="row expanded column small-up-1 medium-up-3 large-up-4 xxlarge-up-5 tourboard-wrap" data-equalizer data-equalize-on="medium" data-equalize-by-row="true" id="listEqualizer">
    <% for(let [i, b] of blocks.entries()) { %>
    <div class="column tourboard__title tourboard__title--<%= i % 7 %>">
        <a href="list/" class="masonry-item masonry-item--index" data-equalizer-watch>
            <h3><%= b.name %></h3>
            <cite></cite>
            <i class="material-icons mi-arrow_forward"></i>
        </a>
    </div>
    <% for(let v of b.value) { %>
    <div class="column">
        <a href="detail_alt.html" class="masonry-item masonry-item--index" data-equalizer-watch>
            <img src="http://oew2ozpi2.bkt.clouddn.com/<%= v.logo %>" />
            <b>
                <%= v.name %>
            </b>
            <p class="with-price"><%= v.feature %></p>
            <span>￥<strong><%= v.minPrice %></strong> <small>起</small></span>
        </a>
    </div>
    <% } %>
    <% } %>
</div>

<div class="row column bottom-search">
    <h3>Got no ideal? Find more here</h3>
    <div class="input-group">
        <input class="input-group-field" type="text">
        <div class="input-group-button">
            <!--<a class="button">Primary Action</a>
            <a class="dropdown button arrow-only">
                <span class="show-for-sr">Show menu</span>
            </a>-->
            <input type="submit" class="button" value="Search">
        </div>
    </div>
</div>

